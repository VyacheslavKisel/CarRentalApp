@model Service.ViewModels.RegisterModel

@{
    ViewBag.Title = "RegisterManager";
}

<h2>RegisterManager</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Регистрация нового менеджера</h4>
        <hr />
        @Html.ValidationSummary(true)
        <p>
            Электронный адрес
            <div>
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </p>
        <p>
            Логин
            <div>
                @Html.EditorFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </p>
        <p>
            Пароль
            <div>
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </p>
        <p>
            Потвердите пароль
            <div>
                @Html.EditorFor(m => m.PasswordConfirm)
                @Html.ValidationMessageFor(m => m.PasswordConfirm)
            </div>
        </p>
    </div>
    <input type="submit" value="Зарегистрировать" />
}